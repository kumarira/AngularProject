 
@model CommonModel.IndexViewtweet
 
<style>
    .editor-field text {
        width: 400px;
        height: 100px;
    }
</style>

@using (Html.BeginForm("tweets", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div>
        <h4>What Are you Doing ?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div> 
        @Html.TextAreaFor(model => model.Details.message, new { @class = "form-control", rows = "3",cols="10" })
        @Html.ValidationMessageFor(model => model.Details.message, "", new { @class = "text-danger" })
           
        </div>       
        <div>
        <input type="submit" value="Tweet" class="btn btn-primary pull-right" />
        </div>       
    </div>
}
<div>
    <h4>Tweets</h4>
    <table class="table">
     

        @foreach (var item in Model.List)
        {
            <tr>
                @*<td>
                   @Html.DisplayFor(modelItem => item.tweet_Id)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td> 
            </tr>
        }
    </table>
</div>
